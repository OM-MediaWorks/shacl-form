@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix ex: <http://example.com/>.
@prefix schema: <https://schema.org/>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

ex:ExampleNodeShapeWithPropertyShapes
	a sh:NodeShape ;
	sh:property [
		sh:path ex:email ;
		# sh:path (ex:knows ex:email) ;
		sh:name "e-mail" ;
		sh:description "We need at least one email value" ;
		sh:order 0 ;
		sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString] ) ;
		sh:minCount 1 ;
		sh:maxCount 6 ;
	] ;
	sh:property [
		sh:group schema:NameGroup ;
		sh:path schema:givenName ;
		sh:order 1 ;
		sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString] ) ;
		sh:name "given name"@en ;
		sh:name "Gegeven name"@nl ;
		sh:description "How do people call you?"@en ;
		sh:minCount 1 ;
		sh:qualifiedMinCount 1 ;
		sh:qualifiedMaxCount 1 ;
		sh:qualifiedValueShape [
				sh:languageIn ( "en" )
		] ;
		sh:uniqueLang true ;
] ;
	sh:property [
		sh:path ex:address ;
		sh:minCount 1 ;
		sh:or (
			[
				sh:datatype xsd:string ;
			]
			[
				sh:class ex:Address, schema:Address ;
			]
		)
	] ;

	sh:property [
		sh:path (ex:knows ex:email) ;
		sh:name "Friend's e-mail" ;
		sh:description "We need at least one email for everyone you know" ;
		sh:minCount 1 ;
	] .

schema:NameGroup
	a sh:PropertyGroup ;
	sh:order 2 ;
	rdfs:label "Name"@en .
